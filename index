<body>
    <div class="header">
        <h1>Welcome! Please Complete Our Survey</h1>
    </div>
    <div class="form-container">
        <!-- Replace YOUR_FORM_URL with your actual Google Form or Typeform URL -->
        <iframe id="formIframe" src="https://forms.gle/aVQXFg4aMhGpwf9PA"></iframe>
    </div>

    <script>
        // Function to check if form is submitted
        function checkFormSubmission() {
            try {
                const iframe = document.getElementById('formIframe');
                const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
                
                // Check for Google Forms submission page
                if (iframeDoc.URL.includes('formResponse') || 
                    // Check for Typeform thank you page
                    iframeDoc.URL.includes('submitted')) {
                    
                    // Wait 3 seconds before refreshing to show the thank you message
                    setTimeout(() => {
                        iframe.src = iframe.src;
                    }, 3000);
                }
            } catch (e) {
                // Handle cross-origin frame access errors silently
            }
        }

        // Check every second for form submission
        setInterval(checkFormSubmission, 1000);
    </script>
</body>
